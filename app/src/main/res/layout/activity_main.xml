<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/InTxLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="@string/InTxLenght"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/InTxWidth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/InTxWidth"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/InTxLength"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="@+id/InTxLength"
        app:layout_constraintTop_toBottomOf="@+id/InTxLength" />

    <EditText
        android:id="@+id/InTxHeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/InTxHeight"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/InTxWidth"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="@+id/InTxWidth"
        app:layout_constraintTop_toBottomOf="@+id/InTxWidth" />

    <Button
        android:id="@+id/BtSend"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="56dp"
        android:text="@string/BtSend"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/InTxHeight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/InTxHeight"
        app:layout_constraintTop_toBottomOf="@+id/InTxHeight" />

    <TextView
        android:id="@+id/OutTx"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/InTxHeight"
        app:layout_constraintStart_toStartOf="@+id/InTxHeight"
        app:layout_constraintTop_toBottomOf="@+id/BtSend" />
</androidx.constraintlayout.widget.ConstraintLayout>